<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:fillViewport="true"
    >


<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/grid_bar_info"
    android:numColumns="auto_fit"
    android:orientation="horizontal"

    >
<!--<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="hello tab 1"
            android:id="@+id/titre_infos"
            android:layout_row="0"
            android:layout_column="1"
             />

    </LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
    android:layout_row="1"
    android:layout_column="0"
    xmlns:android="http://schemas.android.com/apk/res/android">
<CheckBox
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/check_here"
    android:text="I'm here"
    android:checked="false"
    android:visibility="visible"
    android:clickable="true"
    android:layout_row="1"
    android:layout_column="1" />


    <!-- <HorizontalScrollView
         android:layout_row="3"
         android:layout_column="2"
         >

         <LinearLayout
             android:id="@+id/my_gallery_bar"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal" />

     </HorizontalScrollView> -->
</LinearLayout>

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:layout_row="2"
    android:layout_column="0"
xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_sam"
        android:text="I'm sam"
        android:checked="false"
        android:visibility="gone"
        android:layout_row="2"
        android:layout_column="1" />

    <TextView
        android:id="@+id/daily_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/back"
        android:text="Pictures of the day (nb)"
        android:capitalize="characters" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/myrecyclerview"
    android:layout_row="3"
    android:layout_column="1"
    android:layout_height="114dp"
    android:layout_width="243dp" />

    <Button
        android:id="@+id/take_picture"
        android:layout_width="299dp"
        android:layout_height="fill_parent"
        android:background="@drawable/arrondis"
        android:layout_row="3"
        android:layout_column="2"
        android:text="Take picture"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="3"
        android:layout_column="0"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/hide_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/display_grand_picture"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
        android:layout_row="4"
        android:layout_column="0"
xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/daily_activity"
            android:clickable="true"
            android:background="@drawable/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activities of the day (nb)"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="hello tab 1"
    android:id="@+id/focus_infos"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_row="5"
    android:layout_column="1"
    android:typeface="monospace"/>

        <Button
            android:id="@+id/add_bar_activity"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:background="@drawable/arrondis"
            android:layout_row="3"
            android:layout_column="2"
            android:text="Add activities"/>
</LinearLayout>


<!--</LinearLayout>-->
</GridLayout>

