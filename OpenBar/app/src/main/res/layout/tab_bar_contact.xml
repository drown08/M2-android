<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayoutBarContact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/scroll_view_contact_bar"
        android:fillViewport="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ln_contact_1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amis prÃ©sents"
            android:id="@+id/titre_contact_amis"
            android:clickable="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/liste_contact_amis_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:scrollIndicators="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autres personnes"
            android:id="@+id/titre_contact_autre"
            android:clickable="true"
            android:layout_gravity="center_vertical" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/liste_contact_autre_present"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:scrollIndicators="none" />


    </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>





