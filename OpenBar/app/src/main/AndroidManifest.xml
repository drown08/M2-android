<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openbar.frappereauolivier.openbar" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" > <!-- android:theme="@style/AppTheme" -->
        <!-- Maj : Action bar theme. -->
        <activity
            android:name=".Activity.ConnexionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.InscriptionActivity"
            android:label="@string/title_activity_inscription" >
        </activity>
        <activity
            android:name=".Activity.ForgetMailActivity"
            android:label="@string/title_activity_forget_mail" >
        </activity>
        <activity
            android:name=".Activity.FocusActivity"
            android:label="@string/title_activity_focus">
        </activity>
        <activity
            android:name=".Activity.BarActivity"
            android:label="@string/title_activity_bar"
            android:parentActivityName=".Activity.FocusActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.FocusActivity" />
        </activity>
    </application>

</manifest>
